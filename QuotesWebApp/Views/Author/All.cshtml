@model List<AllAuthorViewModel>
@{
    ViewData["Title"] = "All Author";
}

<h1>
    @ViewData["Title"];
</h1>

@if (Model.Any())
{   foreach (var author in Model)
    {
        
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@author.Name</h5>
                <h6 class="card-subtitle mb-2 text-body-secondary">@author.Category</h6>
                <p class="card-text">@author.YearsFromTo</p>

                <a class="card-link" asp-action="CreateQuotes" asp-controller="Quotes" asp-route-id="@author.Id">Create Quotes</a>
                <a class="card-link" asp-action="All" asp-controller="Quotes">View All</a>
            </div>
        </div>
    }
  
}

<p>For now we don't have quotes for you, but you can add some</p>


