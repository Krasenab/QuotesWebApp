@model List<AllQuotesViewModel>
@{
    ViewData["Tatle"] = "All Person Quotes and sources for them";
}
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"></link>
</head>

<h1>
    @ViewData["Title"]
</h1>

<h6></h6>

@foreach (var quotes in Model)
{
    <div class="card">
        <div class="card-header">
            Quote
        </div>
        <div class="card-body">
            <blockquote class="blockquote mb-0">
                <p>@quotes.Description</p>
                <footer class="blockquote-footer">@quotes.AuthorName<cite title="Source Title:">@quotes.Sources</cite></footer>
            </blockquote>
            <div class="text-muted large ml-3">
                <div>
                    <a href="#" onclick="sendVote(@quotes.QuoteId,true,@quotes.AuthorId)">
                        <i class="fa fa-thumbs-up"></i>
                    </a>
                    
                </div>
                
                <partial name="_QuotePartial" hidden="@quotes.QuoteId" />

                <div>
                    <a href="#" onclick="sendVote(@quotes.QuoteId,false,@quotes.AuthorId)"><i class="fa fa-thumbs-down"></i></a>
                </div>
            </div>
        </div>
    </div>
}


<script>
 
        function sendVote(quoteId,isUpVote,authorId) {
            var idForSend = authorId;
            var json = { quoteId: quoteId, isUpVote:isUpVote};
            console.log(json);
            $.ajax({
                url: "/api/Vote",
                type: "POST",
                data: JSON.stringify(json),
                contentType: "application/json;charset=utf-8",
                dataType: "json",
                success: function () {
                     /*  $("#votesTotal-").text(data.VoteCount) */;

                     window.location.href = '/Quotes/AllQuotes?authorId=' + authorId;
                }

            });

        }

</script>
    
   